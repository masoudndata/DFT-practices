      "outputs": []
    },
    {
      "cell_type": "code",
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
        "id": "5SrfSJx4NrIu",
        "outputId": "e4bf78c6-e7a6-4431-b46b-271dbc11dbd0"
      },
      "source": [
        "diag1 = [1]*10000\n",
        "diag2 = [-2]*10000\n",
        "offset = [-1,0,1]\n",
        "D = spdiags([diag1, diag2, diag1], offset, k, k).toarray()/(h**2)\n",
        "len(D.shape)"
      ],
