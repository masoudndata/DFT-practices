      },
      "source": [
        "#squeeze it and actualy make it 1D\n",
        "lx = x.size\n",
        "ly = y.size\n",
        "lz = z.size\n",
        "x = np.reshape(x,(lx, 1))\n",
        "y = np.reshape(y,(ly, 1))\n",
